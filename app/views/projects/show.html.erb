<div id="title-header">
  <h2>Presenting <span class="accent"><%= @project.name %></span></h2>
</div>

<div id="content">
  <div id="card">
    <ul id="info">
      <li><span class="accent">Name:</span> <%= @project.name %></li>
      <li><span class="accent">Links:</span> <%= link_to("Project Website", @project.project_url) %></li>
      <span class="accent">Venue:</span> <%= @project.hacknight%>
      <li><%= link_to("Edit", edit_project_path(@project.id)) %></li>
    </ul>
    <img src="<%= @project.image_url %>" />
  </div>
</div>
<div id="title-header">
  <h2><span class="accent">Built</span> By</h2>
  <div id="content">
    <% @project.hackers.each do |hacker| %>
        <img src="<%= hacker.image_url %>" />
    <% end %>
    <%= form_tag( add_hacker_path, :method => "post" ) do%>
      <%= collection_select(:hacker, :id, @hackers, :id, :name) %>
      <%= hidden_field(:project, :id) %>
      <%= submit_tag("Add Hacker", :id=>"button") %>
    <% end %>
  </div>
</div>
<div id="title-header">
  <h2><span class="accent">Sponsored</span> By</h2>
  <div id="content">
  </div>
</div>
